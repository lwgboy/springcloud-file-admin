<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.company.dao.FriendMapper">
    <resultMap id="friendsResult" type="com.company.domain.Friend">
        <id column="fid" property="id"/>
        <result column="friendId" property="friendId"/>
        <result column="date" property="date"/>
        <result column="remark" property="remark"/>
        <association property="user" column="userId" javaType="com.company.domain.User">
            <id column="id" property="id"/>
            <result column="username" property="username"/>
            <result column="image_url" property="imageUrl"/>
            <result column="phone" property="phone"/>
        </association>
    </resultMap>

    <select id="getAllFriend" resultMap="friendsResult">
        select f.id as fid,friendId,remark,date,u.id as uid,u.username,u.image_url,u.phone
        from friends f inner join `user` u on f.friendId = u.id
        where  userId = #{uid}
    </select>
    <insert id="insertFriend" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO friends(friendId,date,remark,userId)
        VALUES(#{friendId},#{date},#{remark},#{user.id})
    </insert>
    <delete id="deleteFriend">
        delete
        from friends
        where id = #{id}
    </delete>

    <update id="updateRemark">
        update friends
        set remark = #{remark}
        where id = #{id}
    </update>
    <select id="checkCode" resultType="long">
        select id
        from `user`
        where phone = #{phone}
    </select>



</mapper>